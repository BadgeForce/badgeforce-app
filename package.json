{
    "name": "badgeforce-app",
    "productName": "badgeforce-app",
    "version": "0.0.1",
    "description": "BadgeForce wallet for viewing badges and interacting with them",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\""
    },
    "keywords": [],
    "author": "khalil.claybon",
    "license": "MIT",
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "yarn"
            },
            "electronWinstallerConfig": {
                "name": "badgeforce_app"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "",
                "name": ""
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "badgeforceapp"
            }
        }
    },
    "dependencies": {
        "badge-rest-engine": "https://github.com/BadgeForce/badge-rest-engine.git#0.0.1",
        "electron-compile": "^6.4.2",
        "electron-devtools-installer": "^2.1.0",
        "electron-squirrel-startup": "^1.0.0",
        "react": "^15.4.1",
        "react-dom": "^15.4.1",
        "react-hot-loader": "^3.0.0-beta.6",
        "react-router-dom": "^4.2.2",
        "typestyle": "^1.4.2"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-es2015-classes": "^6.24.1",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.24.1",
        "electron-forge": "^4.1.2",
        "electron-prebuilt-compile": "1.7.8"
    }
}
